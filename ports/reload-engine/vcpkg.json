{
  "name": "reload-engine",
  "version-string": "0.6.1",
  "port-version": 0,
  "dependencies": [
    "glm",
    "stb",
    "vulkan",
    {
      "name": "imgui",
      "features": [
        "sdl2-binding",
        "vulkan-binding",
        "docking-experimental"
      ],
      "version>=": "1.88"
    },
    {
      "name": "sdl2",
      "features": [
        "vulkan"
      ]
    },
    {
      "name": "sdl2-mixer"
    },
    {
      "name": "bullet3",
      "features": [
        "multithreading"
      ]
    },
    "hypodermic",
    "boost-dll",
    "args",
    "magic-enum",
    "rapidjson",
    "nlohmann-json",
    {
      "name": "libarchive",
      "default-features": false,
      "features": []
    },
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "features": {
    "editor": {
      "description": "editor for engine",
      "dependencies": [
        "imguizmo",
        "tinygltf",
        "assimp"
      ]
    },
    "tests": {
      "description": "unit testing",
      "dependencies": [
        "catch"
      ]
    },
    "samples": {
      "description": "build sample projects"
    },
    "tools": {
      "description": "tools for building projects with engine",
      "dependencies": [
        "args",
        "assimp",
        "nlohmann-json",
        "tinygltf",
        "vulkan"
      ]
    }
  }
}
